<p><%= song.title %> : <%= song.year %></p>

<% if song.preview_url %>
  <audio controls>
    <source src="<%= song.preview_url %>">
  </audio>
<% end %>

<% if signed_in? %>

  <p>Price: <%= song.price %></p>

  <%= form_tag(song_purchases_path(song), method: :post) do %>
    <%= submit_tag 'Purchase' %>
  <% end %>

  <%= link_to "Edit Song", edit_song_path(song) %>

  <%= form_for song, method: 'delete' do |f| %>
    <%= f.submit "Remove Song", id: "delete-song-#{song.id}" %>
  <% end %>

<% end %>
